<h1>Welcome <%= @user.username %></h1>

<h3>Your published articles</h3>
<% if @articles %>
  <ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
      Created <%= time_ago_in_words(article.created_at) %> ago.
    </li>
  <% end %>
  </ul>
<% end %>

<h3>Your drafts</h3>
  <ul>
    <% if @drafts.length == 1 %>
      <%= @drafts.content %>
    <% else %>
      <% @drafts.each do |draft| %>
      <li>
        <%= draft.content %>
      </li>
      <% end %>
    <% end %>
  </ul>
