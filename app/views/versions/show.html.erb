<h1><%= @article.title %></h1>

<%= link_to 'Version', article_versions_path(@article) %>

<span>Created by: <%= @article.author.username %> on <%= @article.created_at %></span>
<span>Updated: <%= @version.author.username %> on <%= @version.created_at %></span>
<% if @categories.any? %>
  <span>Categories</span>
  <% @categories.each do |category| %>
    <%= link_to category.name, category_path(category) %>
  <% end %>
<% end %>
